<div class="addgarment_container">
    <h3>Details for your new garment!</h3>
<form action="/garment" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="panel panel-default" id="addgarment_details">
  <!-- List group -->
  <ul class="list-group">
       <li class="list-group-item">
           <div class="input-group">
              <span class="input-group-addon" id="basic-addon1" >Name</span>
               <input type="text" name="garment_name" class="form-control" placeholder="name" aria-describedby="basic-addon1">
          </div>
        </li>
        <li class="list-group-item">
           <div class="input-group">
             <span class="input-group-addon" id="basic-addon1" >Description</span>
             <input type="text" name="description" class="form-control" placeholder="description" aria-describedby="basic-addon1">
          </div>
        </li>

        <li class="list-group-item">
           <div class="input-group">
             <span class="input-group-addon" id="basic-addon1">Brand</span>
             <input type="text" name="brand" class="form-control" placeholder="brand" aria-describedby="basic-addon1">
          </div>
        </li>

        <li class="list-group-item">
           <div class="input-group">
             <span class="input-group-addon" id="basic-addon1">Category</span>
             <select name="category_id" id="" class="form-control" aria-describedby="basic-addon1">
              <% @category.each do |cat| %>
              <option value="<%= cat.id%>"><%= cat.lvl1 %></option>
              <% end %> 
           </select>
          </div>
        </li>

        <li class="list-group-item">
           <div class="input-group">
             <span class="input-group-addon" id="basic-addon1">Size</span>
             <input type="text" name="size" class="form-control" placeholder="size" aria-describedby="basic-addon1">
          </div>
        </li>
        <li class="list-group-item">
           <div class="input-group">
             <span class="input-group-addon" id="basic-addon1">Status</span>
             <input type="text" name="status" class="form-control" placeholder="status" aria-describedby="basic-addon1">
          </div>
        </li>
        <li class="list-group-item">
           <div class="input-group">
             <span class="input-group-addon" id="basic-addon1">Buy In</span>
             <input type="text" name="buy_value" class="form-control" placeholder="price" aria-describedby="basic-addon1">
          </div>
        </li>
         <li class="list-group-item">
           <div class="input-group">
             <span class="input-group-addon" id="basic-addon1">Buy Date</span>
             <input type="text" name="buy_date" class="form-control" placeholder="date/month/year" aria-describedby="basic-addon1">
          </div>
        </li>
          <li class="list-group-item">
             <div class="input-group">
               <span class="input-group-addon" id="basic-addon1">Sold On</span>
               <input type="text" name="sold_value" class="form-control" placeholder="price" aria-describedby="basic-addon1">
            </div>
          </li>
           <li class="list-group-item">
             <div class="input-group">
               <input type="file" name="add_image" class="form-control"  aria-describedby="basic-addon1">
             </div>
          </li>
   </ul>
  </div>

   <!-- two buttons for update and delete   -->
    <button  class="btn btn-default btn-lg">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add New</button>
  </form>
</div>